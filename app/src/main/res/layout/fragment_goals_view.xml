        android:id="@+id/streakCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/streakText"
        app:layout_constraintStart_toEndOf="@+id/streakText"
        app:layout_constraintTop_toTopOf="@+id/streakText" />

    <TextView
        android:id="@+id/completionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="23dp"
        android:text="10/10/2025"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/completionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/completionText"
        app:layout_constraintTop_toTopOf="@+id/completionText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:text="10/10/2025"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/completionDate"
        app:layout_constraintStart_toStartOf="@+id/completionDate" />

